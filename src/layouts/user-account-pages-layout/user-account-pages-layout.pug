block variables

doctype html
html(lang='ru' class='page')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="icon" href="assets/favicon/favicon.ico" type="image/ico")
    title #{title}
    block styles
  body(class='page__body')



    main.page__main(class=pageClassName)
      header.user-account-header
        .user-account-header__logo
          include Images/logo.pug
        if (username)
          .user-account-header__user
            .user-account-header__image
              include Components/svg-icon/svg-icon.pug
              +svgIcon(user)
            .user-account-header__name #{username}
      block content

    block scripts
