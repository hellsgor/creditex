mixin form-range(rangeName, rangeLabelText, min, max, postfix, startValue)
  .range
    .range__input
      label.range__lable(for=rangeName) #{rangeLabelText}
      include UIKit/form-control/form-control.pug
      +form-control('text', `input-range-${rangeName}`, '')(data-pluralize-one = postfix.one, data-pluralize-two = postfix.two, data-pluralize-five = postfix.five, readonly)
      .range__control
        input(type='range', min = min,  max = max, data-start-value = startValue)
        .range__custom-track
    .range__numbers-wrapper
      .range__extreme-value
        span.range__min
        span.range__postfix(data-min-postfix='true')
      .range__extreme-value
        span.range__max
        span.range__postfix(data-max-postfix='true')

