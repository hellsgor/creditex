.annuity-calculator-block__calculator.calculator
  .calculator__wrapper
    .calculator__controls
      include UIKit/form-range/form-range.pug
      +form-range('calculator-amount', 'Желаемая сумма найма', 500000, 27000000, {
        one: 'рубль',
        two: 'рубля',
        five: 'рублей'
      }, 3000000)
      +form-range('calculator-payment', 'Сумма ежемесячного платежа', 0, 1000000, {
        one: 'рубль',
        two: 'рубля',
        five: 'рублей'
      }, 83333)
      +form-range('calculator-term', 'Срок ', 1, 10, {
        one: 'год',
        two: 'года',
        five: 'лет'
      }, 3, true)
    .calculator__graph-wrapper
      .calculator__legend
        include UIKit/legend-item/legend-item.pug
        +legend-item('Основной долг', '12141d')
        +legend-item('Проценты', 'e5e5e5')
      .calculator__graph
