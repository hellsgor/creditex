mixin partners-advantage-image(imageName)
  - const png1x = require(`Images/${imageName}/${imageName}-1x.png`);
  - const png2x = require(`Images/${imageName}/${imageName}-2x.png`);
  - const webp1x = require(`Images/${imageName}/${imageName}-1x.webp`);
  - const webp2x = require(`Images/${imageName}/${imageName}-2x.webp`);

  picture.partners-advantage__image
    source(srcset=`${webp1x} 1x, ${webp2x} 2x` type='image/webp')
    source(srcset=`${png1x} 1x, ${png2x} 2x` type='image/png')
    img(alt=`${imageName}` src=require(`Images/${imageName}/${imageName}-1x.png`))
