form.new-password-form(id='new-password-form', name='new-password-form')
  .new-password-form__title
    h4 Восстановление пароля

  .new-password-form__inner
    .new-password-form__controls
      include UIKit/form-control/form-control.pug
      +form-control('text', 'new-password-confirmation-code', 'Код из смс')(class='new-password-form__code-control')
      +form-control('text', 'new-password-password', 'Введите новый пароль')(class='new-password-form__new-password')
      +form-control('text', 'new-password-password-repeat', 'Eщё раз введите новый пароль')(class='new-password-form__new-password-repeat')
    .new-password-form__buttons
      include UIKit/button/button.pug
      +button('new-password-step-back-button', 'javascript:history.back()', 'button', 'transparent', 'Назад')(class='new-password-form__step-back-button')
      +button('new-password-change-password-button', '', 'button', 'primary', 'Изменить пароль')(class='new-password-form__forward-button')
