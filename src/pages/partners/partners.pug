extends Layouts/public-pages-layout/public-pages-layout.pug

block variables
  - let title = 'Partners';
  - let header = true;
  - let footer = true;
  - let pageClassName = 'partners-page';

block styles
  link(href=require('./partners.scss') rel='stylesheet')

block scripts
  script(src=require('./partners.js') defer)

block content
  include Components/offer/offer.pug
  include Components/card-issued-block/card-issued-block.pug

  include Components/advantages/advantages.pug
  +advantages({
    title: 'Все онлайн и прозрачно',
    description: 'В реальном времени видите подключенные клиентом продукты',
  }, '', [
    {
      iconName: 'phone',
      title: 'Договор онлайн',
      paragraphs: ['Присоединитесь к договору-оферте онлайн'],
      bordered: true,
    },
    {
      iconName: 'connection',
      title: 'Подключение за день',
      paragraphs: ['Подайте заявку утром, и уже вечером можно начать работу'],
      bordered: true,
    },
    {
      iconName: 'support',
      title: 'Персональный менеджер',
      paragraphs: ['Помогает настроить работу, обучить сотрудников, разобраться с заявками'],
      bordered: true,
    },
  ])(class='advantages__wrapper_paddings-74-145')

  include Components/how-it-work/how-it-work.pug
  +howItWork('big')

  include Components/advantages-numbers/advantages-numbers.pug
  +advantagesNumbers('Показатели платформы', [
    {
      title: '800 сделок',
      description: 'Более 800 успешных сделок',
    },
    {
      title: '3 млрд',
      description: 'Выдано более 3 млрд рублей',
    },
    {
      title: '74',
      description: 'Кредитных организаций',
    },
  ])(class='advantages-numbers__wrapper_biggest-paddings')
