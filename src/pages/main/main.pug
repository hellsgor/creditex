extends Layouts/public-pages-layout/public-pages-layout.pug

block variables
  - let title = 'Main page';
  - let header = true;
  - let footer = true;
  - let pageClassName = 'main-page';

block styles
  link(href=require('./main.scss') rel='stylesheet')

block scripts
  script(src=require('./main.js') defer)

block content
  include Components/offer/offer.pug
  include Components/card-issued-block/card-issued-block.pug
  include Components/about-platform/about-platform.pug

  include Components/how-it-work/how-it-work.pug
  +howItWork('small')

  include Components/advantages-numbers/advantages-numbers.pug
  +advantagesNumbers('', [
    {
      title: '800 сделок',
      description: 'Более 800 успешных сделок',
    },
    {
      title: '3 млрд',
      description: 'Выдано более 3 млрд рублей',
    },
    {
      title: '74',
      description: 'Кредитных организаций',
    },
  ])
